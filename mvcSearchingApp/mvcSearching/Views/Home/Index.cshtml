@model IEnumerable<mvcSearching.Models.Ogrenciler> 
@{
    ViewBag.Title = "Home Page";
}
    <div class="container">
    <b>Search By:</b>
    <select id="SearchBy">
        <option value="name">Isim</option>
        <option value="ID">ID</option>
    </select> </br> 
    @Html.TextBox("Search")<input type="submit" id="SearchBtn" value="Search" /></br> 
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Isim</th>
                <th>Donem</th>
            </tr>
        </thead>
        <tbody id="DataSearching">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.isim</td>
                    <td>@item.donem</td>
                </tr>
            }
            
            
          </tbody>
        </table>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Search").keyup(function () {
            var SearchBy = $("#SearchBy").val();
            var SearchValue = $("#Search").val();
            var SetData = $("#DataSearching");
            SetData.html("");
            $.ajax({
                type: "post",
                url: "/Home/GetSearchingData?SearchBy=" + SearchBy + "&SearchValue=" + SearchValue,
                contentType: "html",
                success: function (result) {
                    if (result.Length == 0) {
                        SetData.append('<tr style="color:red"><td colspan="3">Eslesen Veri Yok</td></tr>')
                    }
                    else {
                        $.each(result, function (index, value) {
                            var Data = "<tr>" +
                                 "<td>" + value.id + "</td>" +
                                 "<td>" + value.isim + "</td>" +
                                 "<td>" + value.donem + "</td>" +
                                 "</tr>"
                            SetData.append(Data);
                        });
                    }
                }
            });
        });
    });


</script>
